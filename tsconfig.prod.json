{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@healthcheck/*": ["src/modules/health-check/*"],
      "@analyzer/*": ["src/modules/analyzer/*"]
    }
  },
  "exclude": [
    "test",
    "**/*.spec.ts",
    "jest.config.ts",
    "**/*.e2e-spec.ts",
    "jest-e2e.config.ts"
  ]
}
